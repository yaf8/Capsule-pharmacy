<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/background_image"
    tools:context="com.example.capsule.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollForm"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_gravity="center"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/txtCapsule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1E1E1E"
                    android:text="capsule"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    android:textSize="45sp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:src="@mipmap/capsule_logo"
                    android:layout_toEndOf="@+id/txtCapsule"
                    android:contentDescription="LOGO"
                    tools:ignore="HardcodedText" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:text="Hello!"
                android:textColor="#039C8D"
                android:layout_marginTop="50dp"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:text="Welcome back!"
                android:textColor="#047488"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />


            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:textColorHint="#3C4040"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:background="@drawable/custom_edittext"
                android:hint="Email"
                android:textSize="16sp"
                tools:ignore="Autofill,HardcodedText,TextFields" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:textColorHint="#3C4040"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="16sp"
                tools:ignore="Autofill,HardcodedText,TextFields" />

            <CheckBox
                android:id="@+id/CheckBoxAdmin"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="70dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp"
                android:visibility="gone"
                android:text="Login as Admin"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/btnSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="30dp"
                    android:backgroundTint="#135667"
                    android:paddingHorizontal="60dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Sign in"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="30dp"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtHaveAnAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#323333"
                    android:text="Don't have an account?"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txtSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/txtHaveAnAccount"
                    android:text="Sign Up"
                    android:textColor="#03242C"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>