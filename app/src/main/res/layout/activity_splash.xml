<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_image"
    android:gravity="center"
    tools:context="com.example.capsule.SplashActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/capsule_logo"
        android:layout_centerHorizontal="true"
        android:contentDescription="LOGO"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtCapsule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="capsule"
        android:textAllCaps="true"
        android:layout_below="@+id/logo"
        android:layout_marginTop="30dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <ProgressBar
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtCapsule"
        android:layout_marginTop="40dp"
        android:indeterminateTint="#FF5722"/>

</RelativeLayout>