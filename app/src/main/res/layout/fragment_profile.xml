<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.capsule.fragments.ProfileFragment">

    <ScrollView
        android:id="@+id/scrollProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/linearLayoutProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/profilePicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/relative_profile_background"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/CapsuleLogo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@mipmap/capsule_logo"
                    android:contentDescription="Capsule Icon"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    app:strokeColor="@color/white"
                    android:background="@color/white"
                    app:strokeWidth="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:contentDescription="Profile Image"
                    android:src="@mipmap/profile_icon_foreground"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txtFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageProfile"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/black_han_sans"
                    android:text="Full Name"
                    android:textColor="#011C80"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txtEmailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtFullName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold|italic"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/aclonica"
                    android:text="Email Address"
                    android:textColor="#4E0080"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtBtnPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/profile_text_background"
                    android:fontFamily="sans-serif-medium"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp"
                    android:text="Privacy Policy"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_next_24"
                    app:drawableStartCompat="@drawable/ic_baseline_policy_24"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txtBtnHelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/profile_text_background"
                    android:fontFamily="sans-serif-medium"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="15dp"
                    android:text="Help  and support"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_next_24"
                    app:drawableStartCompat="@drawable/ic_baseline_help_24"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txtBtnTerm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/profile_text_background"
                    android:fontFamily="sans-serif-medium"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="15dp"
                    android:text="Term and Conditions"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_next_24"
                    app:drawableStartCompat="@drawable/ic_term_and_condition_24"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txtBtnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/profile_text_background"
                    android:fontFamily="sans-serif-medium"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="15dp"
                    android:text="Logout"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_next_24"
                    app:drawableStartCompat="@drawable/ic_logout_24"
                    tools:ignore="HardcodedText" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>